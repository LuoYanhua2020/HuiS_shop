page {
  background-color: #FFFFFF;
}
page .Login {
  padding: 0px 60rpx;
  box-sizing: border-box;
}
page .Login .Login_top {
  width: 100%;
  height: 130rpx;
  margin-top: 140rpx;
}
page .Login .Login_top text {
  font-size: 50rpx;
  color: #555555;
}
page .Login .Login_content {
  width: 100%;
}
page .Login .Login_content .contenttop {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
page .Login .Login_content .contenttop view {
  width: 230rpx;
  height: 80rpx;
  border: 1px solid #dddddd;
  border-radius: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin: 0 20rpx;
}
page .Login .Login_content .contenttop view text {
  color: #dddddd;
  font-size: 30rpx;
}
page .Login .Login_content .contenttop .active {
  border: 1px solid red;
}
page .Login .Login_content .contenttop .active text {
  color: red;
}
page .Login .Login_content .Content_content {
  width: 100%;
  margin-top: 40rpx;
}
page .Login .Login_content .Content_content .content_top {
  width: 100%;
  height: 130rpx;
  background-color: #f8f6fc;
  padding: 5px 20rpx;
  box-sizing: border-box;
}
page .Login .Login_content .Content_content .content_top view {
  margin-top: 10rpx;
}
page .Login .Login_content .Content_content .content_top input {
  width: 90%;
  height: 50rpx;
  margin-top: 10rpx;
}
page .Login .Login_content .Content_content .content_bottom {
  margin-top: 55rpx;
  position: relative;
}
page .Login .Login_content .Content_content .content_bottom ._p {
  width: 170rpx;
  height: 45rpx;
  border: 1px solid red;
  color: red;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  border-radius: 20rpx;
}
page .Login .Login_bottom {
  width: 100%;
  height: 80rpx;
  background-color: #fa436a;
  border-radius: 50rpx;
  text-align: center;
  margin-top: 70rpx;
}
page .Login .Login_bottom text {
  font-size: 45rpx;
  color: #FFFFFF;
  margin-top: 20rpx;
}

